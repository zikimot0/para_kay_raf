<Window x:Class="ReminderApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Login" FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="EmailTextBox" Width="200" Height="30" VerticalAlignment="Top" Margin="0,70,0,0" HorizontalAlignment="Center" />

        <PasswordBox x:Name="PasswordBox" Width="200" Height="30" VerticalAlignment="Top" Margin="0,120,0,0" HorizontalAlignment="Center" />

        <Button Content="Login" Width="100" Height="30" VerticalAlignment="Top" Margin="0,170,0,0" HorizontalAlignment="Center" Click="LoginButton_Click"/>

        <TextBlock x:Name="ErrorMessage" Foreground="Red" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
