<Window x:Class="ReminderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="600"
        MinHeight="300" MinWidth="400">
    <Grid>
        <!-- Define rows and columns for dynamic resizing -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Reminder List -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Left (Logout) -->
            <ColumnDefinition Width="*"/>
            <!-- Center (Login Logs) -->
            <ColumnDefinition Width="Auto"/>
            <!-- Right (Add Reminder) -->
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="Welcome to ReminderApp" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,20" Grid.Row="0" Grid.ColumnSpan="3" VerticalAlignment="Top"/>

        <!-- Reminder List -->
        <ListBox x:Name="ReminderListBox" Grid.Row="1" Grid.ColumnSpan="3" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Subject}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding DateTime}" FontStyle="Italic"/>
                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Logout Button -->
        <Button Content="Logout" Width="150" Height="40" Margin="10" Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="LogoutButton_Click"/>

        <!-- View Login Logs Button (Visible only for admin) -->
        <Button Content="View Login Logs" x:Name="ViewLoginLogsButton" Width="150" Height="40" Margin="10" Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Collapsed" Click="ViewLoginLogsButton_Click"/>

        <!-- Add Reminder Button -->
        <Button Content="Add Reminder" Width="150" Height="40" Margin="10" Grid.Row="2" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="AddReminderButton_Click"/>
    </Grid>
</Window>