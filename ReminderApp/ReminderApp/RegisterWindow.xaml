<Window x:Class="ReminderApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Register" FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>

        <!-- Email TextBox -->
        <TextBox x:Name="EmailTextBox" Width="200" Height="30" VerticalAlignment="Top" Margin="0,70,0,0" HorizontalAlignment="Center" />

        <!-- PasswordBox -->
        <PasswordBox x:Name="PasswordBox" Width="200" Height="30" VerticalAlignment="Top" Margin="0,120,0,0" HorizontalAlignment="Center" />

        <!-- Register Button -->
        <Button Content="Register" Width="100" Height="30" VerticalAlignment="Top" Margin="0,170,0,0" HorizontalAlignment="Center" Click="RegisterButton_Click"/>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorMessage" Foreground="Red" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>